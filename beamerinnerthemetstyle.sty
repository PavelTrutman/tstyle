% Title page
\defbeamertemplate*{title page}{texsx}[1][]
{
    % title
    \begin{beamercolorbox}[sep=0.5cm,center]{title}
      \usebeamerfont{title}\inserttitle\par
      \usebeamerfont{subtitle}\insertsubtitle\par
    \end{beamercolorbox}

    % author
    \vskip0.75cm
    \begin{beamercolorbox}[center]{author}
      \usebeamerfont{author}\insertauthor\par
    \end{beamercolorbox}

     % date
    \vskip0.2cm
    \begin{beamercolorbox}[center]{date}
      \usebeamerfont{date}\insertdate
    \end{beamercolorbox}

    % logo
    \vskip0.75cm%
    \begin{beamercolorbox}[center]{white}
      \includegraphics[height=1.5cm]{tstyle/images/ctu_inverse}
    \end{beamercolorbox}

    % institute
    \vskip0.2cm
    \begin{beamercolorbox}[center]{institute}
      \usebeamerfont{institute}\insertinstitute
    \end{beamercolorbox}
}

